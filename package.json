{
  "name": "addons-updater",
  "productName": "WOW Addons Updater",
  "version": "0.0.1",
  "main": "./src/electron-main/main.js",
  "scripts": {
    "start": "yarn run lint && yarn run build-dev && yarn run launch",
    "launch": "cross-env NODE_ENV=development electron .",
    "build-package": "yarn run build && electron-packager . --out=builds --overwrite --ignore=src/electron-renderer --ignore=tmp --ignore=README.md --ignore=tsconfig.json --ignore=yarn.lock --ignore=webpack.config.js --ignore=LICENSE --ignore=.travis.yml  --ignore=.babelrc --ignore=.eslintrc --ignore=.gitignore --ignore=.stylelintrc --ignore=postcss.config",
    "build-dev": "cross-env NODE_ENV=development webpack --watch",
    "build": "cross-env NODE_ENV=production webpack",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "eslint ./src",
    "lint:css": "stylelint ./src"
  },
  "author": "Saionaro",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "classnames": "2.2.6",
    "clean-webpack-plugin": "1.0.0",
    "copy-webpack-plugin": "5.0.2",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "electron": "4.1.4",
    "electron-packager": "13.1.1",
    "eslint": "5.15.2",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-react": "7.12.0",
    "less": "3.9.0",
    "less-loader": "4.1.0",
    "mini-css-extract-plugin": "0.5.0",
    "postcss-jsx": "0.36.0",
    "postcss-loader": "3.0.0",
    "postcss-syntax": "0.34.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-redux": "7.0.2",
    "redux": "4.0.1",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "stylelint": "10.0.0",
    "stylelint-config-recommended": "2.1.0",
    "svg-url-loader": "2.3.2",
    "typescript": "3.2.1",
    "webpack": "4.30.0",
    "webpack-cli": "3.2.0",
    "@types/classnames": "2.2.6",
    "@types/nanoid": "1.2.1",
    "@types/react": "16.7.10",
    "@types/react-dom": "16.0.11",
    "@types/react-redux": "7.0.5",
    "@types/redux-logger": "3.0.6"
  },
  "dependencies": {
    "adm-zip": "0.4.13",
    "cheerio": "1.0.0-rc.3",
    "lodash": "4.17.11",
    "nanoid": "2.0.1",
    "request": "2.88.0"
  }
}
